
<h1 >Весь банк фотографий</h1>

{{#if photoes.length}}
<div class="input-field">
  <input placeholder="Поиск" id="search" type="text" class="validate">
    <label for="first_name">Что поискать?</label>
</div>
{{#each photoes}}
  <div class="row">
    <div class="col s6 offset-s3 cards">
      <div class="card hoverable">
        <div class="card-image">
          <img src="{{img}}" alt="{{title}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{title}}</span>
          <p class="description" >{{description}}</p>
          <p class="price">{{price}}</p>

        </div>
        <div class="card-action actions">
          <a href="/photo/{{_id}}">Подробнее</a>
          {{#if @root.isAuth}}
          {{#ifeq userId._id @root.userId}}
          <a href="/photo/{{_id}}/edit?allow=true" >Редактировать</a>
          {{/ifeq}}
          <form action="/card/add" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <button class="btn waves-effect waves-ligh" type="submit">В КОРЗИНУ</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<h2>Maybe Later...</h2>
{{/if}}