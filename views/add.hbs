<h1>Добавить фото в банк</h1>
<form action="/add" method="POST">
<div class="input-field ">
          <input id="title" name="title" type="text" class="validate" required>
          <label for="title">Назвение фото</label>
          <span class="helper-text" data-error="Введите название"></span>
</div>

<div class="input-field ">
          <input  id="description" name="description" type="text" class="validate">
          <label for="description">Описание</label>
          <span class="helper-text" data-error="Введите описание для фото" ></span>
</div>

<div class="input-field ">
          <input  id="price" name="price" type="number" class="validate" required min='0'>
          <label for="price">Цена</label>
          <span class="helper-text" data-error="Введите цену" ></span>
</div>

<div class="input-field ">
          <input  id="img" name="img" type="text" class="validate">
          <label for="img">URL картинки</label>
          <span class="helper-text" data-error="Укажите коррекнтый URL"></span>
</div>
<input type="hidden" name="_csrf" value="{{csrf}}">
<button class="btn btn-primary">Добавить фото</button>
</form>